# Configuration pour les tests locaux - blockchain-history-medisupply

# AWS Configuration (pour DynamoDB local)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=fakeMyKeyId
AWS_SECRET_ACCESS_KEY=fakeSecretAccessKey
DYNAMODB_TABLE_HISTORIAL=historial_transparencia
DYNAMODB_TABLE_EVENTO=evento_verificado
DYNAMODB_ENDPOINT=http://localhost:8000
USE_AWS_SECRETS=false

# Kafka Configuration (local)
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_CONSUMER_GROUP=historial-blockchain-consumer
KAFKA_TOPIC=event.transaccion.blockchain.registered
KAFKA_PRODUCER_TOPIC=event.historial
KAFKA_PRODUCER_TOPIC_RECONSTRUIDO=event.historial.reconstruido
KAFKA_PRODUCER_TOPIC_INCONSISTENCIA=event.historial.inconsistencia

# Blockchain Configuration (désactivé pour les tests sans Alchemy)
ALCHEMY_API_KEY=fake_api_key_for_testing
BLOCKCHAIN_RPC_URL=http://localhost:8545
BLOCKCHAIN_NETWORK=localhost
BLOCKCHAIN_TIMEOUT=5

# Server Configuration
SERVER_PORT=8081
GIN_MODE=debug

# Security (clés de test)
ENCRYPTION_KEY=test-encryption-key-32-chars-long
JWT_PUBLIC_KEY=test_jwt_public_key_for_testing

# Rate Limiting (permissif pour les tests)
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=60

# Observability (désactivé pour les tests)
ENABLE_TRACING=false
JAEGER_ENDPOINT=http://localhost:14268/api/traces
ENABLE_METRICS=true
PROMETHEUS_PORT=2112

# Blockchain Verification (désactivé pour les tests sans blockchain)
ENABLE_STRICT_VERIFICATION=false
MAX_RETRIES=3
RETRY_DELAY=1000

# Test Environment
TEST_MODE=true
ENABLE_BLOCKCHAIN=false
MOCK_BLOCKCHAIN_RESPONSES=true

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json
